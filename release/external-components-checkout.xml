<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	<artifactId>diameter-external-components-checkout</artifactId>
	<groupId>org.mobicents</groupId>
	<version>1.0</version>

    <name>Mobicents :: Diameter :: ${pom.artifactId}</name>
	
	<properties>
		<checkout.basedir>${basedir}/servers/</checkout.basedir>
		<checkout.username>mobicents-read-only</checkout.username>
		<checkout.password></checkout.password>
		
		<jainslee.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/servers/jain-slee/mobicents-jainslee-server-1.2.2.GA</jainslee.connectionURL>
	</properties>
	
	<profiles>
	<profile>
	<id>checkout</id>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-scm-plugin</artifactId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>jain-slee-checkout</id>
						<goals>
							<goal>checkout</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<scmVersion>HEAD</scmVersion>
							<scmVersionType>revision</scmVersionType>
							<skipCheckoutIfExists>true</skipCheckoutIfExists>
							<checkoutDirectory>
								${checkout.basedir}/jain-slee
							</checkoutDirectory>
							<connectionUrl>
								${jainslee.connectionURL}
							</connectionUrl>
							<username>${checkout.username}</username>
							<password>${checkout.password}</password>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
    </profile>
    <profile>
        <id>update</id>
        <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>jain-slee-update</id>
                        <goals>
                            <goal>update</goal>
                        </goals>
                        <phase>validate</phase>
                        <configuration>
                            <basedir>
                                ${checkout.basedir}/jain-slee
                            </basedir>
                            <scmVersion>HEAD</scmVersion>
                            <scmVersionType>revision</scmVersionType>
                            <connectionUrl>
                                ${jainslee.connectionURL}
                            </connectionUrl>
                            <username>${checkout.username}</username>
                            <password>${checkout.password}</password>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    </profile>
    </profiles>
</project>
